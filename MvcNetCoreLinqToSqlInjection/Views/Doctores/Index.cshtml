@model List<Doctor>

<h1>Doctores SQL Server y Oracle DI</h1>

<p>
    <a asp-controller="Doctores"
       asp-action="Create">
        Create new
    </a>
</p>

<table class="table table-warning">
    <thead>
        <tr>
            <th>Id</th>
            <th>Apellido</th>
            <th>Especialidad</th>
            <th>Salario</th>
            <th>Hospital</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Doctor doc in Model)
        {
            <tr>
                <td>@doc.IdDoctor</td>
                <td>@doc.Apellido</td>
                <td>@doc.Especialidad</td>
                <td>@doc.Salario</td>
                <td>@doc.IdHospital</td>
                <td>
                    @Html.ActionLink("Delete", "Delete", "Doctores",
                    new { iddoctor = @doc.IdDoctor },
                    new {@class = "btn btn-danger"})
                </td>
            <td>
                @Html.ActionLink("Modificar", "Update", "Doctores",
                                new { id = @doc.IdDoctor },
                                new { @class = "btn btn-warning" })
            </td>
            </tr>
        }
    </tbody>
</table>
